{
  "name": "languageshop",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "react-router build",
    "dev": "react-router dev",
    "start": "react-router-serve ./build/server/index.js",
    "typecheck": "react-router typegen && tsc",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "test:api": "vitest run test/stores/integration.test.ts",
    "test:e2e": "playwright test",
    "test:pwa": "node scripts/test-pwa.js",
    "test:pwa:quick": "pnpm build && pnpm start",
    "test:pwa:validate": "pnpm build && node scripts/validate-pwa.js && pnpm start",
    "serve:static": "cd build/client && python -m http.server 3001",
    "msw:init": "msw init public --save"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.2",
    "@radix-ui/react-checkbox": "^1.3.3",
