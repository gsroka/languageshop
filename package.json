    "playwright": "^1.56.1",
    "prettier": "3.6.2",
    "tailwindcss": "^4.1.13",
    "tw-animate-css": "^1.4.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.46.0",
    "vite": "^7.1.7",
    "vite-plugin-pwa": "^1.0.3",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.2.4"
